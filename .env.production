# Production Environment Configuration for STASIS Frontend

# Application Environment
NODE_ENV=production
REACT_APP_ENV=production

# API Configuration
REACT_APP_API_BASE_URL=https://stasis-edu.tech/api
REACT_APP_BACKEND_URL=https://stasis-edu.tech

# Domain Configuration
REACT_APP_DOMAIN=stasis-edu.tech
REACT_APP_PROTOCOL=https

# Feature Flags
REACT_APP_DEBUG=false
REACT_APP_CONSOLE_LOGS=false

# Security Configuration
REACT_APP_SECURE_COOKIES=true
REACT_APP_SAME_SITE=strict

# Performance Configuration
GENERATE_SOURCEMAP=false
INLINE_RUNTIME_CHUNK=false

# Build Configuration
BUILD_PATH=build
PUBLIC_URL=https://stasis-edu.tech

# SSL Configuration
HTTPS=true
SSL_CRT_FILE=ssl/server.crt
SSL_KEY_FILE=ssl/server.key

# Session Configuration
REACT_APP_SESSION_TIMEOUT=3600000
REACT_APP_SESSION_WARNING=300000

# Application Metadata
REACT_APP_VERSION=1.0.0
REACT_APP_BUILD_DATE=2024-01-01
REACT_APP_APP_NAME=STASIS Education Management System
